# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=indestructibleeco
POSTGRES_PORT=5432

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_PORT=6379
REDIS_PASSWORD=           # leave empty for no-auth in local dev

# ── Supabase (local dev — use supabase start for real local Supabase) ─────────
# If using hosted Supabase project:
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here
# If using local Supabase CLI (supabase start):
# SUPABASE_URL=http://localhost:54321
# SUPABASE_SERVICE_ROLE_KEY=<from supabase status output>
# SUPABASE_ANON_KEY=<from supabase status output>

# ── API Service ───────────────────────────────────────────────────────────────
API_PORT=3000
LOG_LEVEL=info           # trace | debug | info | warn | error

# ── AI Service ────────────────────────────────────────────────────────────────
AI_HTTP_PORT=8001
AI_GRPC_PORT=8000

# ── NGINX Dev Proxy ───────────────────────────────────────────────────────────
NGINX_HTTP_PORT=8080     # single entry point: http://localhost:8080

# ── Grafana ───────────────────────────────────────────────────────────────────
GRAFANA_PORT=3030
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ── Prometheus ────────────────────────────────────────────────────────────────
PROMETHEUS_PORT=9090

# ── Alertmanager ─────────────────────────────────────────────────────────────
ALERTMANAGER_PORT=9093

# ── Jaeger ────────────────────────────────────────────────────────────────────
JAEGER_UI_PORT=16686
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318

# ── Grafana Tempo ─────────────────────────────────────────────────────────────
TEMPO_PORT=3200

# ── Loki ──────────────────────────────────────────────────────────────────────
LOKI_PORT=3100

# ── Consul ───────────────────────────────────────────────────────────────────
CONSUL_UI_PORT=8500

# ── cAdvisor ─────────────────────────────────────────────────────────────────
CADVISOR_PORT=8888

# ── Mailpit (local SMTP) ──────────────────────────────────────────────────────
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025

# ── Celery / Flower ───────────────────────────────────────────────────────────
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# ── Redis Commander (optional tools profile) ──────────────────────────────────
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin
