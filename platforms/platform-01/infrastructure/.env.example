# =============================================================================
# Eco-Base Infrastructure Environment Variables
# =============================================================================
# 複製此文件為 .env 並填入您的實際值
# cp .env.example .env
# =============================================================================

# GCP 配置
export GCP_PROJECT_ID="your-project-id"
export GCP_REGION="us-central1"
export GCP_ZONE="us-central1-a"

# GKE 集群配置
export GKE_CLUSTER_STAGING="eco-base-staging"
export GKE_CLUSTER_PRODUCTION="eco-base-production"
export K8S_NAMESPACE_STAGING="staging"
export K8S_NAMESPACE_PRODUCTION="production"

# 映像倉庫
export REGISTRY="${GCP_REGION}-docker.pkg.dev/${GCP_PROJECT_ID}/eco-base"

# Workload Identity
export WORKLOAD_IDENTITY_PROVIDER="projects/PROJECT_NUMBER/locations/global/workloadIdentityPools/github-actions/providers/github-provider"
export GCP_SERVICE_ACCOUNT="github-actions@${GCP_PROJECT_ID}.iam.gserviceaccount.com"
export GCP_DEPLOY_SERVICE_ACCOUNT="deployer@${GCP_PROJECT_ID}.iam.gserviceaccount.com"

# 域名
export DOMAIN_STAGING="staging.your-domain.com"
export DOMAIN_PRODUCTION="your-domain.com"

# Supabase (如果使用)
export SUPABASE_URL="https://your-project.supabase.co"
# 注意: 不要在這裡存儲密鑰，使用 Secret Manager

# Cloudflare (如果使用)
export CLOUDFLARE_ZONE_ID="your-zone-id"
# 注意: 不要在這裡存儲 API Token，使用 Secret Manager

# 通知 (可選)
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
export PAGERDUTY_SERVICE_KEY="your-pagerduty-key"

# 開發工具
export KUBECONFIG="${HOME}/.kube/config"
export HELM_CACHE_HOME="${HOME}/.cache/helm"
export TERRAFORM_CACHE="${HOME}/.terraform.d/plugin-cache"
